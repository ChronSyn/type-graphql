{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "release": "lerna publish",
    "release:next": "lerna publish prerelease",
    "test": "jest --watch",
    "test:ci": "jest --coverage --verbose --ci -i",
    "build": "ttsc --build --force",
    "build:watch": "ttsc --build --watch",
    "lint:check": "eslint ./packages/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix ./packages/**/*.{ts,tsx}",
    "format:check": "prettier --check ./packages/**/*.{ts,tsx}",
    "format:fix": "prettier --write ./packages/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.7.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.5",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.4.2",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ttypescript": "~1.5.10",
    "typescript": "~3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
